generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement()) // PK
  email     String    @unique
  password  String
  phone     String?
  name      String
  status    Int       @default(1) // 0: inactive, 1: active
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  posts     Post[] // One-to-many relationship with Post
}

model Post {
  id         Int      @id @default(autoincrement()) // PK 
  title      String
  summary    String?
  content    String   @db.LongText
  status     Int      @default(1) // 0: inactive, 1: active
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id          Int       @id @default(autoincrement()) // PK
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  posts       Post[] // One-to-many relationship with Post
}

model Comment {
  id        Int      @id @default(autoincrement()) // PK
  message   String
}
